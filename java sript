// Projeto Adivinhe o N√∫mero - Claudete de Oliveira Alves e [Nome do(a) parceiro(a)]

// Vari√°veis principais
let numeroSecreto;
let tentativasMaximas = 10;
let tentativasRestantes;
let palpites = [];

// Elementos do DOM
const inputPalpite = document.getElementById("palpite");
const btnEnviar = document.getElementById("btnEnviar");
const btnReiniciar = document.getElementById("btnReiniciar");
const mensagem = document.getElementById("mensagem");
const tentativasTexto = document.getElementById("tentativas");
const historicoTexto = document.getElementById("historico");

// Fun√ß√£o para iniciar ou reiniciar o jogo
function iniciarJogo() {
    numeroSecreto = Math.floor(Math.random() * 100) + 1;
    tentativasRestantes = tentativasMaximas;
    palpites = [];

    mensagem.textContent = "Boa sorte! Digite um n√∫mero e clique em enviar.";
    tentativasTexto.textContent = `Tentativas restantes: ${tentativasRestantes}`;
    historicoTexto.textContent = "Seus palpites: Nenhum ainda.";
    inputPalpite.value = "";
    inputPalpite.disabled = false;
    btnEnviar.disabled = false;
    btnReiniciar.classList.add("hidden");

    console.log("N√∫mero secreto (debug):", numeroSecreto); // Para testes no console
}

// Fun√ß√£o para verificar o palpite do usu√°rio
function verificarPalpite() {
    const palpite = Number(inputPalpite.value);

    if (!palpite || palpite < 1 || palpite > 100) {
        mensagem.textContent = "‚ö†Ô∏è Digite um n√∫mero v√°lido entre 1 e 100!";
        return;
    }

    palpites.push(palpite);
    tentativasRestantes--;

    if (palpite === numeroSecreto) {
        mensagem.textContent = `üéâ Parab√©ns! Voc√™ acertou o n√∫mero ${numeroSecreto}!`;
        fimDeJogo();
    } else if (tentativasRestantes === 0) {
        mensagem.textContent = `‚ùå Suas tentativas acabaram! O n√∫mero era ${numeroSecreto}.`;
        fimDeJogo();
    } else {
        if (palpite < numeroSecreto) {
            mensagem.textContent = "üìâ O n√∫mero secreto √© MAIOR!";
        } else {
            mensagem.textContent = "üìà O n√∫mero secreto √© MENOR!";
        }
        tentativasTexto.textContent = `Tentativas restantes: ${tentativasRestantes}`;
        historicoTexto.textContent = "Seus palpites: " + palpites.join(", ");
    }

    inputPalpite.value = "";
}

// Fun√ß√£o para encerrar o jogo
function fimDeJogo() {
    inputPalpite.disabled = true;
    btnEnviar.disabled = true;
    btnReiniciar.classList.remove("hidden");
}

// Eventos
btnEnviar.addEventListener("click", verificarPalpite);
btnReiniciar.addEventListener("click", iniciarJogo);

// Iniciar ao carregar a p√°gina
iniciarJogo();
